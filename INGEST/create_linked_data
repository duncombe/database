#! /bin/bash

# read a catalog and link files from the database to a WAF 

# export CATALOG=`pwd`/test-catalog1
# export DATABASE=`pwd`/test-database1

CATALOG=${CATALOG:?}
DATABASE=${DATABASE:?}

export LINKDIR=${1:?}

LINKDIR=${LINKDIR%/}/
DATABASE=${DATABASE%/}

ACCID=${2:-.}

function relpath() { 
  python -c "import os,sys;print(os.path.relpath(*(sys.argv[1:])))" "$@";
}

cat $CATALOG | grep "$ACCID" | 
	# tail -n 10 |
	awk -v DB=${DATABASE} -v SD=${LINKDIR} -v RRD=$(relpath $DATABASE $LINKDIR) '
		BEGIN{FS="\t"}
		/^#/{next}
		{
		# dir=substr($1,1,2) "/" substr($1,3,2) "/" substr($1,5,2)
		dir=substr($1,1,2) 
		file=substr($1,3)
		# rawfile=substr($0,137)
		rawfile=$NF

		# cmd="ls -l \"" DB "/" dir "/" file "\""

		cmd="dirname \"" rawfile "\""
		# print cmd

		cmd | getline path ;  close(cmd)

		# determine the accession number from the datetime and UUID 
		acc=$3 "=" $4

		cmd2="test -d \"" SD "/" acc "/" path "\""
		if (system(cmd2)==1){
			cmd="mkdir -pv \"" SD "/" acc "/" path "\""
			N=split(path,a,"/")+1
			RD=RRD
			for (i=1;i<=N;i++){RD="../" RD}

			# print cmd
			# print rawfile
			system(cmd) ; close(cmd)
		}
		close(cmd2)

		if (length(file)!=0 && length(rawfile)!=0){
			testcmd="test -L \"" SD "/" acc "/" rawfile "\""
			# beware: sense of system is opposite to what you might expect. returns 0 (in gawk false) if the 
			# file is a link, 1 (in gawk true) if it is not. 
			if (system(testcmd)){
				# print testcmd
				#    ln  -sf  (   linkpointer         ) (                          )
				#   -----------    ---     ---      -------    ---     ---        ---- 
				cmd="ln -sf \"" RD "/" dir "/" file "\" \"" SD "/" acc "/" rawfile "\""
				# print cmd
				system(cmd) ; close(cmd)
				}
			close(testcmd)
			}
		else{
			print "Bad catalog entry: " FNR " (" NR ")" > "/dev/stderr"
			}
		}' 

# vi: se nowrap tw=0 :

